<% layout("layouts/boilerplate.ejs") %>

<body>
  <form
    class="new-form needs-validation"
    action="/properties"
    method="post"
    novalidate
    enctype="multipart/form-data"
  >
    <h2 class="form-title">Create New Listing</h2>
    <label for="title" class="form-label">Enter title</label>
    <input
      type="text"
      name="property[title]"
      id="title"
      class="form-control"
      required
    />
    <br /><br />
    <label for="description" class="form-label">Enter Description</label>
    <textarea
      name="property[description]"
      id="description"
      required
      class="form-control"
    ></textarea>
    <br /><br />
    <h3 class="form-title">Enter Location</h3>
    <input
      type="text"
      placeholder="street"
      name="property[street]"
      required
      class="form-control"
    />
    <input
      type="text"
      placeholder="city"
      name="property[city]"
      required
      class="form-control"
    />
    <input
      type="text"
      placeholder="state"
      name="property[state]"
      required
      class="form-control"
    />
    <input
      type="text"
      placeholder="country"
      name="property[country]"
      required
      class="form-control"
    />
    <input
      type="number"
      placeholder="zipCode"
      name="property[zipCode]"
      required
      class="form-control"
    />
    <br /><br />
    <label for="price" class="form-label">Enter Price</label>
    <input
      type="number"
      name="property[price]"
      required
      class="form-control"
      id="price"
    />
    <br /><br />
    <label for="image" class="form-label">Upload Image</label>
    <input
      type="file"
      required
      name="property[image]"
      class="form-control"
      id="image"
      multiple
      placeholder="you can add upto 4 images"
    />
    <br /><br />
    <label for="propertyType" class="form-label">Select PropertyType</label>
    <select
      name="property[propertyType]"
      id="propertyType"
      required
      class="form-control"
    >
      <option value="Apartment">Apartment</option>
      <option value="Room">Room</option>
      <option value="House">House</option>
      <option value="Studio">Studio</option>
    </select>
    <br /><br />
    <label for="availableFrom" class="form-label">availableFrom:</label>
    <input
      type="date"
      id="availableFrom"
      name="property[availableFrom]"
      required
      class="form-control"
    />
    <br /><br />
    <label for="amenities" class="form-label">Amenities</label>
    <input
      type="text"
      name="property[amenities]"
      required
      class="form-control"
      id="amenities"
    />
    <button class="form-submit-btn">Submit</button>
  </form>
  <script src="../../js/fileCompressor.js"></script>
</body>
